{
  "name": "m-design-system",
  "description": "M Design System - Complete design system with components, tokens, and documentation",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "workspaces": "npm ls --workspaces",
    "workspaces:list": "npm ls --workspaces --depth=0",
    "build": "npm run build --workspaces --if-present",
    "dev": "npm run dev --workspace=apps/docs",
    "docs:dev": "npm run dev --workspace=apps/docs",
    "docs:build": "npm run build --workspace=apps/docs",
    "test": "npm run test --workspaces --if-present",
    "test:serve": "npx @web/dev-server --node-resolve --open=/packages/components/test/index.html",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "deps:update": "npm update --workspaces",
    "deps:outdated": "npm outdated --workspaces"
  },
  "keywords": [
    "design-system",
    "web-components",
    "design-tokens",
    "lit"
  ],
  "author": "Magnus Fredlundh (magnus.dev)",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Mmmgnus/m.git"
  },
  "homepage": "https://github.com/Mmmgnus/m#readme"
}
